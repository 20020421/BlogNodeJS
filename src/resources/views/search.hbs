<div class="search-form mt-4 mx-4">
    <form method="POST" action="/news">
        <div class="form-group">
            <label for="search-input">Từ khóa</label>
            <input type="text" class="form-control" id="search-input" name="q" aria-describedby="emailHelp"
                placeholder="Nhập từ khóa">
        </div>
        <div class="form-group">
            <label for="gender-input">Từ khóa</label>
            <select class="form-control" id="gender-input" name="gender">
                <option value="">--Chọn giới tính--</option>
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>
</div>